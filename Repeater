using System;

namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.ForegroundColor = ConsoleColor.DarkCyan;
            Console.WriteLine("Птица Говорун,отличается умом и сообразительностью!");

            Console.ForegroundColor = ConsoleColor.White;
            Console.WriteLine("Но,тебе доступен только говорящий попугай,без ума и сообразительности. " +
                "\nПока, он может повторять за тобой фразы, столько раз, сколько ты захочешь." +
                "\nПопробуй!");

            Console.ForegroundColor = ConsoleColor.DarkCyan;
            Console.WriteLine("Для начала введи фразу,которую будет попугайничать попугай!");

            string userInput = (Console.ReadLine());

            Console.WriteLine("А теперь скажи,сколько раз повторить эту фразу?");
            
            int repeatCount = Convert.ToInt32(Console.ReadLine());

            Console.WriteLine("Наслаждайся...");


            for (int i = repeatCount; i > 0; i--)
            {
                Console.ForegroundColor = ConsoleColor.DarkGreen;

                Console.WriteLine(userInput);

               
            }
